# Application Settings
APP_NAME=AI Agent Identity Gateway
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# Security & Authentication
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./identityrag.db
# For PostgreSQL: postgresql://user:password@localhost:5432/identityrag

# OpenAI (for embeddings and AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Vector Store
VECTOR_STORE_TYPE=faiss  # Options: faiss, pinecone
FAISS_INDEX_PATH=./data/faiss_index

# Pinecone (optional, if using Pinecone instead of FAISS)
# PINECONE_API_KEY=your-pinecone-api-key
# PINECONE_ENVIRONMENT=us-west1-gcp
# PINECONE_INDEX_NAME=agent-rag

# Observability
LOG_LEVEL=INFO
ENABLE_TRACING=true
OTEL_SERVICE_NAME=agent-identity-gateway

# CORS (for frontend development)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
